<%
  require 'goodreads'
  @client = Goodreads::Client.new(api_key: "p5qrzhENwZGbhMZ5izXULA")
  books.each do |passed|
    book = @client.book_by_isbn(passed[:isbn])
%>
  <section class="book">
    <div class="side">
      <div class="circle number"><span><%= passed[:counter] %></span></div>
      <a href="<%= passed[:link]%>" target="_blank"><%=image_tag('http://images.amazon.com/images/P/' + passed[:isbn] + '.01.LZZZZZZZ.jpg', class: "book_cover")%></a>
      <%= link_to("View on Amazon ", passed[:link], target: "_blank", class: "btn outbound", title: "View and Get on Amazon" ) %>
      <span class="disclaimer">using this link helps keep this site online</span>
    </div>
    <div class="main">
      <h2><%=book.title%></h2>
      <div class="inline">
        <h5 class="author">by <%= passed[:author] %></h5>
        <span class="rating"><%=book.average_rating%><!-- out of 5.0 --> Hoots </span><a href="<%=book.link%>" target="_blank" title="View book in GoodReads" class="drop-target"><%=image_tag("images/info.svg", class: "info")%></a>
      </div>
      <p class="description"><%=strip_tags(book.description)%></p>
      <!-- <p class="description"><%#=truncate_words(strip_tags(book.description), length: 800, separator: "<br>")%></p> -->
      <p><a href="<%=book.link%>" target="_blank" class="readnow"> Read It Now! </a></p>
      <!-- <p><a class="readmore"> Read More</a></p> -->
    </div>

  </section>
<% end %>
